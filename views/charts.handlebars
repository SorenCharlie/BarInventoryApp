<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bar Chart</title>
</head>
<body>

<h1>hello</h1>

    <div style="width: 50%; margin: auto;">
        <canvas id="myChart"></canvas>
    </div>
    
    <script>
        // Assuming `test` is passed as a variable to the Handlebars template
        const testValue = {{test}};

        // Wait until the document is fully loaded
        document.addEventListener('DOMContentLoaded', (event) => {
            const ctx = document.getElementById('myChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Test Label'], // You can customize this label
                    datasets: [{
                        label: 'Test Data',
                        data: [testValue],
                        backgroundColor: 'rgba(0, 255, 0, 0.2)', // Green color with some transparency
                        borderColor: 'rgba(0, 255, 0, 1)', // Solid green border
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        });
    </script>
</body>

</html>
